<h2> <%= @list.name %></h2>

<%= link_to 'Add movie', new_list_path, class: 'btn btn-outline-secondary' %>
<%= link_to 'Edit list', edit_list_path(@list), class: 'btn btn-outline-secondary' %>

<%= link_to 'Delete list', list_path(@list), data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: 'btn btn-outline-secondary' %>

<%= link_to 'Return to Lists', lists_path, class: 'btn btn-outline-secondary' %>
